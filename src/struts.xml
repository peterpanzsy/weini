<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="json" extends="json-default">
		<!-- 登陆登出 -->
		<action name="login" class="com.weini.manage.action.LoginAction" method="login" >
			<result name="succ" type="redirect">/pages/index.jsp</result>
			<result name="fail" type="redirect">/pages/sign-in.jsp</result>
		</action>
	    <action name="logout" class="com.weini.manage.action.LoginAction" method="logout">
			<result name="success" type="json">				
			</result>
		</action>
	    <!--账户管理-->
		<action name="listAdmin" class="com.weini.manage.action.AdminAction" method="listAdmin">
			<result name="SUCCESS" type="json">				
			</result>
		</action>
		<action name="updateAdmin" class="com.weini.manage.action.AdminAction" method="updateAdmin">
			<result name="SUCCESS" type="json">				
			</result>
		</action>
		<action name="delAdmin" class="com.weini.manage.action.AdminAction" method="delAdmin">
			<result name="SUCCESS" type="json">				
			</result>
		</action>
		<action name="listAuthByRole" class="com.weini.manage.action.AdminAction" method="listAuthByRole">
			<result name="SUCCESS" type="json">				
			</result>
		</action>
		<action name="updateAuthByRole" class="com.weini.manage.action.AdminAction" method="updateAuthByRole">
			<result name="SUCCESS" type="json">				
			</result>
		</action>
		<!-- 商家管理 -->
		<action name="listVendor" class="com.weini.manage.action.VendorAction" method="listVendor">
			<result name="SUCCESS" type="json">				
			</result>
		</action>
			<action name="updateVendor" class="com.weini.manage.action.VendorAction" method="updateVendor">
			<result name="SUCCESS" type="json">				
			</result>
		</action>
		<action name="delVendor" class="com.weini.manage.action.VendorAction" method="delVendor">
			<result name="SUCCESS" type="json">				
			</result>
		</action>
		<!-- 用户管理 -->
		<action name="listUser" class="com.weini.manage.action.UserAction" method="listUser">
			<result name="SUCCESS" type="json">				
			</result>
		</action>
		<action name="delUser" class="com.weini.manage.action.UserAction" method="delUser">
			<result name="SUCCESS" type="json">	
			</result>
		</action>
		
		
		<!-- TODO 以下是测试的部分最后删掉即可 -->
		<action name="testJSON" class="com.weini.manage.action.TestJSON" >
			<result name="SUCCESS" type="json">				
			</result>
		</action>
		<!-- 处理和Box有关的Action信息 -->
		<action name="CSBox_*" class="com.weini.manage.action.CSBoxAction" method="{1}">
			<result name="TYPESUCCESS" type="json">	
				<param name="includeProperties">dataList.*,result</param> 
			</result>
			<!-- 支持片区选择列表 -->
			<result name="AREASUCCESS" type="json">	
				<param name="includeProperties">dataList.*</param> 
			</result>
			<!-- 写字楼的选择列表 -->
			<result name="OFFICESUCCESS" type="json">	
				<param name="includeProperties">dataList.*</param> 
			</result>
		</action>
		<!-- 处理手机端的用户登录 -->
		<action name="CSUserLoginAction_*" class="com.weini.manage.action.CSUserLoginAction" method="{1}">
			<!-- 使用手机号码和密码登录-->
			<result name="LOGINSUCCESS" type="json">	
				<param name="includeProperties">u.*,result</param> 
			</result>
			<result name="FAIL" type="json">
				<param name="includeProperties">result</param> 
			</result>
		</action>
		<!-- 处理手机端的订单信息的Action -->
		<action name="CSOrder_*" class="com.weini.manage.action.CSOrderAction" method="{1}">
			<result name="SUCCESS" type="json">	
				<param name="includeProperties">dataList.*</param> 
			</result>
		</action>
	</package>

</struts>    
