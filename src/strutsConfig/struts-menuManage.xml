<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="menumanage" extends="json-default" namespace="/menuManage" >
		<!-- 列出所有的盒子模型 -->
		 <action name="menuinfoDetail" class="com.weini.manage.action.MenuManageAction" method="menuinfoDetail">
			<result name="SUCCESS" type="json">	
				<param name="includeProperties">
				code,
				menu\.menuinfoName,
				menu\.menuinfoImage1,
				menu\.menuinfoImage2,
				menu\.menuinfoImage3,
				menu\.menuinfoImage4,
				menu\.menuinfoDetail,
				menu\.menuinfoPoint,
				menuDish\[\d+\]\.dishesName,
				menuDish\[\d+\]\.dishesSeries1,
				menuDish\[\d+\]\.dishesWeight,
				</param>			
			</result>
			<result name="fail" type="json">	
				<param name="includeProperties">
					code,result
				</param>			
			</result>
		</action>
		<!-- 列出所有menutype  -->	
		<action name="listMenutype" class="com.weini.manage.action.MenuManageAction" method="listMenutype">
			<result name="success" type="json">	
				<param name="includeProperties">code,list.*</param>			
			</result>
			<result name="fail" type="json">	
				<param name="includeProperties">code,result</param>			
			</result>
		</action>
		
		<!-- 列出所有meneinfo  -->	
		<action name="listMenuinfo" class="com.weini.manage.action.MenuManageAction" method="listMenuinfo">
			<result name="success" type="json">	
				<param name="includeProperties">code,list\[\d+\]\.menuinfoName,list\[\d+\]\.menuinfoDetail,
				list\[\d+\]\.menuinfoPoint,list\[\d+\]\.menuType</param>			
			</result>
		</action>
	</package>
</struts>    
